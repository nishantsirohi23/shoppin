<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="13dp"
android:layout_marginBottom="13dp"
app:cardCornerRadius="20dp"
app:cardElevation="7dp"
    app:cardBackgroundColor="@color/white"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/products_back"
>
    <RelativeLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">


        <ImageView
            android:id="@+id/imageofproduct"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menswear" />

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@color/white">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textproductname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:capitalize="words"
                    android:text="Nike Air"
                    android:textAllCaps="true"
                    android:textColor="#474781"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textproductprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="$280"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="185dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/offersback"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:padding="4dp"
                    android:src="@drawable/discount" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="10%"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:id="@+id/textproductdiscount"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="@color/white"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"

                android:backgroundTint="@color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/addtowishlist" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>





