<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="to.nishant.shoppin.HomeFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/purple_200">
        <RelativeLayout
            android:id="@+id/searchandphoto"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/titlemainshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="ShopHere"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold" />





            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilephotomain"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/man" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="74dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/homeseach_back"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/searchlayout">



                <ImageButton android:id="@+id/btnsearch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/search"
                    android:padding="6dp"
                    android:backgroundTint="@color/transparent"

                    />

            </LinearLayout>


        </RelativeLayout>

        <com.shrikanthravi.customnavigationdrawer2.widget.SNavigationDrawer
            android:id="@+id/navigationDrawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:appbarTitleTextSize="7sp"
            android:layout_marginTop="10dp"
            android:background="@color/purple_200"
            android:backgroundTint="@color/purple_200"
            app:appbarColor="@color/purple_200"
            app:navigationDrawerBackgroundColor="@color/white">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200" />

        </com.shrikanthravi.customnavigationdrawer2.widget.SNavigationDrawer>


    </LinearLayout>



</FrameLayout>