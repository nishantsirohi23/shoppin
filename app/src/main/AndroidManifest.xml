            android:name="to.nishant.shoppin.Home"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="to.nishant.shoppin.SellerProducts"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.SellerOrders"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.DashboardSeller"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.infofororder"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.Wishlist"
            android:exported="true" />

        <service
            android:name="to.nishant.shoppin.PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>