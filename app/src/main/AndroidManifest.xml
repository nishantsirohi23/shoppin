            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.SignupActivity"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.LoginActivity"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.Opening1"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="to.nishant.shoppin.Trackorder"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.addnewaddress"
            android:exported="true" />
        <activity
            android:name="to.nishant.shoppin.Checkout3"
            android:exported="true" />
